<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/barraSuperior"
    tools:context=".ActivitiesExecuting">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:src="@drawable/logo" />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="@dimen/fab_margin"
                app:backgroundTint="#0576EF"
                app:srcCompat="@drawable/plus" />

            <!-- TODO: Update blank fragment layout -->
            <TextView
                android:id="@+id/welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="" />


            <TextView
                android:id="@+id/msg_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#E40B0B"
                android:layout_margin="2dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="" />

            <Spinner
                android:id="@+id/projects_works"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_gravity="center" />



            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text=""
                />


            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Nombre de la Actividad"
                android:textColor="#0E0C12"/>

            <EditText
                android:id="@+id/nameActivityText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:text=""
                android:hint="Digite el nombre de la actividad"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_gravity="center"

                android:text="Responsable Actividad"
                android:textColor="#07050B"/>

            <EditText
                android:id="@+id/responsableText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:hint="Digite el nombre del responsable" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Descripción Actividad"
                android:textColor="#0F0A15"/>

            <EditText
                android:id="@+id/descriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:hint="Digite la descripción de la actividad"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Estado de la Actvidad"
                android:textColor="#0A080C"/>


            <Spinner
                android:id="@+id/states_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_gravity="center" />

            <Button
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:enabled="false"
                android:text="Guardar Actividad"/>

            <Button
                android:id="@+id/visualize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:text="Visualizar Actividades"
                android:enabled="false"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>