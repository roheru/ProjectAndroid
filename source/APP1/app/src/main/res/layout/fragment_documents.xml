        android:layout_gravity="center"
        android:layout_margin="2dp"

        android:text="Cargar Informe SST"/>

    <Button
        android:id="@+id/listinfoSST"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="2dp"

        android:text="Listar Informes SST"/>
    <Button
        android:id="@+id/infoObra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="2dp"

        android:text="Cargar Informe de Obra"/>
    <Button
        android:id="@+id/listinfoObra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="2dp"

        android:text="Listar Informes de Obra"/>

