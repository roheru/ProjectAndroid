<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Materials"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/barraSuperior"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:src="@drawable/logo" />
    <Spinner
        android:id="@+id/projects_works"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_gravity="center" />
    <TextView
        android:id="@+id/labelnameMaterial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:gravity="center"
        android:text="Nombre Material" />
    <EditText
        android:id="@+id/nameMaterial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:text=""
        android:hint="Digite el nombre del material"/>


    <TextView
        android:id="@+id/labelReference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:gravity="center"
        android:text="Referencia Material" />

    <EditText
        android:id="@+id/reference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:text=""
        android:hint="Digite la referencia del material"/>
    <TextView
        android:id="@+id/labelDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:gravity="center"
        android:text="Descripción Material" />

    <EditText
        android:id="@+id/descriptionm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:text=""
        android:hint="Digite la descripción del material"/>

    <TextView
        android:id="@+id/labelQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:gravity="center"
        android:text="Cantidad Material" />

    <EditText
        android:id="@+id/quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:text=""
        android:hint="Digite la cantidad del material"/>


    <TextView
        android:id="@+id/labelState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:gravity="center"
        android:text="Estado Solicitud" />

    <EditText
        android:id="@+id/stateSol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:text="-//-"
        android:hint=""/>

    <Button
        android:id="@+id/saveMaterial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="2dp"

        android:text="Guardar Registro Material"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>